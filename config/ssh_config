Host *
    # Ciphers
    Ciphers aes128-ctr,aes192-ctr,aes256-ctr,aes128-gcm@openssh.com,aes256-gcm@openssh.com,chacha20-poly1305@openssh.com

    # MACs
    MACs hmac-sha2-256,hmac-sha2-512,umac-64@openssh.com,umac-128@openssh.com

    # KexAlgorithms
    KexAlgorithms diffie-hellman-group14-sha256,ecdh-sha2-nistp256,ecdh-sha2-nistp384,curve25519-sha256,curve25519-sha256@libssh.org

    # HostKeyAlgorithms
    HostKeyAlgorithms ecdsa-sha2-nistp256,ecdsa-sha2-nistp384,ecdsa-sha2-nistp521,ssh-ed25519

    # Authentication settings
    PubkeyAuthentication yes
    PasswordAuthentication yes
    ChallengeResponseAuthentication yes

    # Forwarding options
    ForwardAgent yes
    ForwardX11 yes

    # Connection keep-alives
    ServerAliveInterval 60
    ServerAliveCountMax 3

    # Connection timeout
    ConnectTimeout 10

